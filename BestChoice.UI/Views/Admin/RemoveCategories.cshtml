@{
    ViewData["Title"] = "RemoveCategory";
    Layout = "~/Views/Shared/_LayoutSBAdmin.cshtml";
}

<div id="page-wrapper">
    <div id="container">
        <h2>Categories</h2>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <table class="table" id="tbCategories">
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>Category Name</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>






            
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var ApiBaseUrl = "@ViewBag.ApiBaseUrl";
            var token = localStorage.getItem("token");
            loadCategories();

            function loadCategories() {
                $.ajax({
                    url: ApiBaseUrl + "Categories/GetList",
                    type: "GET",
                    dataType: "json",
                    success: function (data) {
                        var tableBody = $("#tbCategories tbody");
                        tableBody.empty();

                        $.each(data, function (index, category) {
                            tableBody.append(
                                "<tr>" +
                                "<td>" + (index + 1) + "</td>" +
                                "<td>" + category.name + "</td>" +
                                "<td class='action' data-title='Remove'><a href='#' class='remove-category' data-id='" + category.id + "'><i class='fa fa-trash-alt'></i></a></td>" +
                                "</tr>"
                            );
                        });
                    },
                    error: function () {
                        console.error("Error loading categories.");
                    }
                });
            }

            $(document).on('click', '.remove-category', function (e) {
                e.preventDefault();
                var categoryId = $(this).data('id');

                if (confirm("Are you sure you want to delete this category?")) {
                    $.ajax({
                        url: ApiBaseUrl + "Categories/RemoveCategory/" + categoryId,
                        type: "DELETE",
                        headers: {
                            "Authorization": "Bearer " + token
                        },
                        success: function (data) {
                            if (data.status) {
                                loadCategories();
                            } else {
                                alert(data.message);
                            }
                        },
                        error: function (e) {
                            alert("Kategori silinirken bir hata oluştu.");
                        }
                    });
                }
            });
        });
    </script>
}
