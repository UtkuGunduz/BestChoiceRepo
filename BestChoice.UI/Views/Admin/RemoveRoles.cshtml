
@{
    ViewData["Title"] = "blank";
    Layout = "~/Views/Shared/_LayoutSBAdmin.cshtml";
}

<div id="page-wrapper">
    <div id="container">
        <h2>Roles</h2>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <table class="table" id="tbRoles">
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>Role Name</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var ApiBaseUrl = "@ViewBag.ApiBaseUrl";
            var token = localStorage.getItem("token");

            loadRoles();

            function loadRoles() {
                $.ajax({
                    url: ApiBaseUrl + "Admin/Roles",
                    type: "GET",
                    dataType: "json",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    success: function (data) {
                        var tableBody = $("#tbRoles tbody");
                        tableBody.empty();

                        $.each(data, function (index, role) {
                            tableBody.append(
                                "<tr>" +
                                "<td>" + (index + 1) + "</td>" +
                                "<td>" + role.name + "</td>" +
                                "<td class='action' data-title='Remove'><a href='#' class='remove-role' data-id='" + role.id + "'><i class='fa fa-trash-alt'></i></a></td>" +
                                "</tr>"
                            );
                        });
                    },
                    error: function () {
                        console.error("Error loading roles.");
                    }
                });
            }

            $(document).on('click', '.remove-role', function (e) {
                e.preventDefault();
                var roleId = $(this).data('id');

                if (confirm("Are you sure you want to delete this role?")) {
                    $.ajax({
                        url: ApiBaseUrl + "Admin/RoleRemove/" + roleId,
                        type: "DELETE",
                        headers: {
                            "Authorization": "Bearer " + token
                        },
                        success: function (data) {
                            if (data.status) {
                            } else {
                                alert(data.message);
                            }
                            loadRoles();
                        },
                        error: function (e) {
                            alert("An error occurred while deleting the role.");
                        }
                    });
                }
            });
        });
    </script>
}

